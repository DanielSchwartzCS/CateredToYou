Client Management
Clients Table
client_id (Primary Key, INT, AUTO_INCREMENT)
client_name (VARCHAR(100))
phone_number (VARCHAR(15))
email_address (VARCHAR(100))
billing_address (VARCHAR(255))
preferred_contact_method (ENUM('Phone', 'Email', 'Text'))
notes (TEXT)
User Management
Users Table
user_id (Primary Key, INT, AUTO_INCREMENT)
username (VARCHAR(127))
password_hash (VARCHAR(255))
phone_number (VARCHAR(15))
email_address (VARCHAR(100))
first_name (VARCHAR(100))
last_name (VARCHAR(100))
role (ENUM('caterer', 'employee'))
employment_status (ENUM('Active', 'Probation', 'On Leave', 'Exited'))
Event Management
Events Table
event_id (Primary Key, INT, AUTO_INCREMENT)
event_description (VARCHAR(255))
start_date (DATE)
end_date (DATE)
location (VARCHAR(255))
client_id (Foreign Key referencing Clients Table, INT)
guest_count (INT)
waiters_provided (INT)
min_staff (INT)
notes (TEXT)
event_status (ENUM('Planned', 'In Progress', 'Completed', 'Canceled'))
EventMenu Table
event_menu_id (Primary Key, INT, AUTO_INCREMENT)
event_id (Foreign Key referencing Events Table, INT)
menu_item_id (Foreign Key referencing Menu Items Table, INT)
quantity (INT)
stage (VARCHAR(100))
notes (TEXT)
EventServices Table (linking Events and Services)
event_id (Foreign Key to Events Table)
service_id (Foreign Key to Services Table)
Menu Management
Menu Items Table
menu_item_id (Primary Key, INT, AUTO_INCREMENT)
item_name (VARCHAR(100))
item_type (ENUM('Appetizer', ‘Station’, 'Buffet', 'Dessert', 'Plated’, 'Nonfood'))
item_fancy_description (Customer-facing description, TEXT)
item_price (DECIMAL(8,2))
Inventory Management
Inventory Table
inventory_id (Primary Key, INT, AUTO_INCREMENT)
item_name (VARCHAR(255))
unit (ENUM('mg', 'ml', 'whole'))
display_unit (ENUM('g', 'kg', 'lb', 'oz', 'ml', 'l', 'gal', 'qt', 'pint', 'cup'))
quantity_in_stock (DECIMAL(10,2))
location_id (Foreign Key referencing Storage Locations Table, INT)
InventorySummary Table (aggregates total quantities)
item_name (Primary Key, VARCHAR(255))
total_quantity (DECIMAL(10,2))
Ingredients Table
ingredient_id (Primary Key, INT, AUTO_INCREMENT)
ingredient_name (VARCHAR(255))
RecipeIngredients Table
recipe_id (Foreign Key referencing Recipes Table, INT)
ingredient_id (Foreign Key referencing Ingredients Table, INT)
quantity (DECIMAL(10, 2)) -- quantity of the ingredient needed for the recipe
unit (ENUM('mg', 'ml', 'whole'))
Equipment Management
Equipment Table
equipment_id (Primary Key, INT, AUTO_INCREMENT)
equipment_name (VARCHAR(255))
category (ENUM('chef_ware', 'tableware', 'serving_utensil', 'linen', 'cutting_board', 'cookware', 'sheetpan', 'chafing_dish', 'chafing_dish_insert', 'drink_dispenser', 'trashcan', 'storage_container', 'buffet_ware', 'disposable', 'lighting', 'safety_gear', 'showpiece', 'display_item', 'glassware', 'transport', 'sterno', 'tent', 'large_equipment', 'cleaning_equipment'))
quantity (INT)
location_id (FK referencing Storage Locations, INT)
details (TEXT)
model_number (VARCHAR(63))
serial_number (VARCHAR(63))
status (ENUM('untested', 'deliverable', 'broken'))
purchase_date (DATE)
warranty_exp (DATE)
last_maintenance (DATE)
maintenance_frequency (INT)
usage_count (INT)
Storage Management
StorageLocations Table
location_id (Primary Key, INT, AUTO_INCREMENT)
location_name (VARCHAR(255))
location_description (TEXT)
max_capacity (INT)
current_usage (INT)
location_status (ENUM('Available', 'Full', 'Under Maintenance'))
notes (TEXT)
Delivery Management
Vehicles Table
vehicle_id (Primary Key, INT, AUTO_INCREMENT)
vehicle_name (VARCHAR(255))
make (VARCHAR(63))
model (VARCHAR(63))
license_plate (VARCHAR(63))
status (ENUM('available', 'in_use', 'maintenance', 'retired'))
last_maintenance (DATE)
Deliveries Table
delivery_id (Primary Key, INT, AUTO_INCREMENT)
vehicle_id (FK referencing Vehicles Table, INT)
delivery_time (DATETIME)
destination (VARCHAR(255))
last_location_id (FK referencing Locations, INT)
next_location_id (FK referencing Locations, INT)
status (ENUM('pending', 'in_transit', 'delivered', 'canceled'))
Locations Table
location_id (Primary Key, INT, AUTO_INCREMENT)
name (VARCHAR(255))
address (VARCHAR(255))
latitude (DECIMAL(10, 7))
longitude (DECIMAL(10, 7))
DeliveryItems Table
delivery_id (FK referencing Delivery Table, INT)
inventory_id (FK referencing Inventory Table, INT)
equipment_id (FK referencing Equipment Table, INT)
ready_item_id (FK referencing Equipment Table, INT)
unit (ENUM('mg', 'ml', 'whole'))
display_unit (ENUM('g', 'kg', 'lb', 'oz', 'ml', 'l', 'gal', 'qt', 'pint', 'cup', 'whole'))
Stage Management
Stages Table
event_id (Foreign Key referencing Events Table, INT)
stage_name (VARCHAR(100))
start_time (DATETIME)
end_time (DATETIME)
PRIMARY KEY (event_id, stage_name)
Task Management
Tasks Table
task_id (Primary Key, INT, AUTO_INCREMENT)
event_id (Foreign Key referencing Events Table, INT)
department_id (INT)
task_description (VARCHAR(255))
complete (BOOLEAN)
Departments Table
dept_id (Primary Key, INT, AUTO_INCREMENT)
dept_name (VARCHAR(100))
Employee Departments Table
employee_id (FK referencing Employees Table, INT)
department_id (FK referencing Departments Table, INT)
Recipe Management
Allergens Table
allergen_id (Primary Key)
allergen_name (VARCHAR(255))
RecipeAllergens Table
recipe_id (Foreign Key to Recipes Table)
allergen_id (Foreign Key to Allergens Table)
Services Management
Services Table
service_id (Primary Key)
service_name (VARCHAR(255))
provided_by (VARCHAR(255))
