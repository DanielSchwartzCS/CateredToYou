<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".UserActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/back_to_MainActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="4dp"
            android:text="Back"
            android:padding="8dp"
            android:textSize="16sp" />

        <!-- Header -->
        <TextView
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:textSize="32sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="12dp" />

        <!-- Existing Fields -->
        <EditText
            android:id="@+id/et_a"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="15dp"
            android:hint="Enter username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_b"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="15dp"
            android:hint="Enter password"
            android:inputType="textPassword" />

        <!-- New Fields -->
        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="First Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Last Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Phone Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress" />

        <!-- Role Field (RadioButton) -->
        <RadioGroup
            android:id="@+id/role_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_caterer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caterer"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp" />

            <RadioButton
                android:id="@+id/radio_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee" />
        </RadioGroup>

        <!-- Employment Status Label and Spinner -->
        <TextView
            android:id="@+id/employment_status_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employment Status"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinner_employment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:prompt="@string/employment_status_prompt" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="12dp"
                android:text="Sign Up"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_view"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:textSize="24sp"
            android:text="View Users" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="326dp"
            android:layout_gravity="bottom|left">

            <TextView
                android:id="@+id/result_tv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:gravity="center|bottom"
                android:textSize="24sp" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>
