<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Background Image -->
    <ImageView
        android:src="@drawable/restaurant_svgrepo_com"
        android:scaleType="centerCrop"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center" />

    <!-- Header Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Catered To You"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Subtext Paragraph -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your journey to delicious catering begins here."
        android:layout_marginBottom="32dp" />

    <!-- Continue Button -->

    <!-- Question and Email Link -->
    <Button
        android:id="@+id/continue_button"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#FFC533"
        android:padding="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Get Started"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questions? "
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="support@example.com"
        android:textColor="@android:color/holo_blue_dark"
        android:autoLink="email"
        android:clickable="true"
        android:padding="4dp"
        android:textSize="16sp"
        />
</LinearLayout>
